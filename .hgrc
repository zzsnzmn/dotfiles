%include ~/.hgrc.local

# [ui]
# username = me
# ignore = a file
# style = something

[extensions]
hgext.convert=
hgext.graphlog=
color=
transplant=
hgext.bookmarks=
hgext.parentrevspec =
hgext.rebase =
hgext.extdiff=
pager=
purge=

[diff]
git = True
showfunc = True

[merge-patterns]
** = mvimdiff

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = $local $other -f
vimdiff.checkchanged = true
vimdiff.gui = False
vimdiff.binary = False
vimdiff.fixeol = True

mvimdiff.executable = mvim
mvimdiff.args = -d $local $other -f
mvimdiff.checkchanged = True
mvimdiff.gui = False
mvimdiff.binary = False
mvimdiff.fixeol = True

[pager]
attend = diff, annotate, lg, manifest, glog, help
pager = LESS='FSRX' less
